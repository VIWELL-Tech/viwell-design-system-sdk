{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": ".",
        "strict": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts",
        "**/*.json" // Include JSON files if needed
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
